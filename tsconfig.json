{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "lib": ["ESNext", "DOM", "ES2018"],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["packages/*"]
    },
    "resolveJsonModule": true,
    // "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictFunctionTypes": false,
    "skipLibCheck": true,
    "outDir": "lib",
    "rootDir": "packages",
    "types": ["jest", "node"]
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": ["packages/**/__test__/*.test.ts"]
}
